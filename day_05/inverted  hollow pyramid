#include <iostream>
using namespace std;
void printstar(int n){
    int i,j;
    for(i=1;i<=n;i++){
        for(j=1;j<=2*n-1;j++){
            if(j==i||j==(2*n-i)||(i==1)){
            cout<< "*" <<" ";
            }
            else
            cout<<" "<<" ";
        }
        cout<<"\n";
    }
}
int main() {
   int n;
   cin>>n;
   printstar(n);
   return 0;
}
